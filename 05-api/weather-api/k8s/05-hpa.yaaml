apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: spro-examples-weather-api-hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: spro-examples-weather-api
  minReplicas: 1
  maxReplicas: 4
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 70
